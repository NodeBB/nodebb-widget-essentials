<div class="mb-3">
	<label class="form-label">Number of posts to display:</label>
	<input type="text" class="form-control" name="numPosts" placeholder="1" />
</div>

<div class="mb-3">
	<label class="form-label">Uid of user (leave empty to use uid from profile page):</label>
	<input type="text" class="form-control" name="uid"/>
</div>

<div class="mb-3">
	<label class=form-label" for="postType">Post type</label>
	<select class="form-select" id="postType" name="postType">
		<option value="last">Last</option>
		<option value="first">First</option>
		<option value="best">Best</option>
	</select>
</div>